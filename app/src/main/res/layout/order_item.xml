<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/material_green300"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="160dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="26dp"
            android:text="Nisha" />

        <TextView
            android:id="@+id/order_item_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignStart="@+id/order_item_name"
            android:layout_below="@+id/order_item_name"
            android:text="9688612122" />

        <TextView
            android:id="@+id/order_item_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_above="@+id/order_item_phone_number"
            android:layout_alignParentEnd="true"
            android:text="#1234" />

        <Button
            android:id="@+id/map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="View On Map" />

        <Button
            android:id="@+id/see_details"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/map_button"
            android:layout_toStartOf="@+id/map_button"
            android:text="See Details" />
    </RelativeLayout>

</android.support.v7.widget.CardView>